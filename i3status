# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!



general {
    output_format = "i3bar"
    colors = false
    interval = 5
    markup = pango
    interval = 1
}

order += "ethernet tun0"
order += "ethernet eth0"
order += "disk /"
order += "memory"

ethernet tun0 {
    format_up = "<span background='#91c483' color='#1c1c1c'> VPN: %ip </span>"
    format_down = "<span background='#ff6464' color='#1c1c1c'> VPN Off </span>"
}
ethernet eth0 {
    format_up = "<span background='#91c483' color='#1c1c1c'> E: %ip </span>"
    format_down = "<span background='#ff6464 color='#1c1c1c'> E: down </span>"
}

#battery all {
#        format = "%status %percentage %remaining"
#}

disk "/" {
        format = "Disk: %avail"
}

memory {
        format = "Used: %used | Available: %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}
